void sss_reset_connection(SSSConn* conn) {
  memset(conn, 0, sizeof(SSSConn));
  conn->fd = -1;
  conn->state = READY;
  conn->rx_wr_pos = conn->rx_buffer;
  conn->rx_rd_pos = conn->rx_buffer;
  return;
}

void GetNextData(  unsigned char *Data, int Len){
   int i,kol=Len>>2;;
   int *D=(int*)Data;

	for(i=0;i<kol;i++){
	    D[i]=i;
	}
}


